generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  username         String   @unique
  email            String
  password         String
  referral         String
  noHp             String
  balance          Int
  todayIncome      Int
  yesterdayIncome  Int
  cumulativeIncome Int
  teamBenefit      Int
}
